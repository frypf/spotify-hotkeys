{
    "name": "__MSG_application_title__",
    "description": "__MSG_application_description__",
    "version": "1.3.1",
    "default_locale": "en",
    "manifest_version": 3,
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": { },
    "commands": {
        "001-npv": {
            "description": "__MSG_npv__",
            "global": true
        },
        "002-queue": {
            "description": "__MSG_queue__",
            "global": true
        },
        "003-search": {
            "description": "__MSG_search__",
            "global": true
        },
        "101-play-pause": {
            "description": "__MSG_short_play_pause__",
            "suggested_key": {
                "default": "MediaPlayPause"
            },
            "global": true
        },
        "102-next": {
            "description": "__MSG_short_next__",
            "suggested_key": {
                "default": "MediaNextTrack"
            },
            "global": true
        },
        "103-previous": {
            "description": "__MSG_short_previous__",
            "suggested_key": {
                "default": "MediaPrevTrack"
            },
            "global": true
        },
        "201-seek-forward": {
            "description": "__MSG_short_seek_forward__",
            "global": true
        },
        "202-seek-backward": {
            "description": "__MSG_short_seek_backward__",
            "global": true
        },
        "301-shuffle": {
            "description": "__MSG_short_shuffle__",
            "global": true
        },
        "302-repeat": {
            "description": "__MSG_short_repeat__",
            "global": true
        },
        "303-like": {
            "description": "__MSG_short_like__",
            "global": true
        },
        "401-volume-up": {
            "description": "__MSG_volume_up__",
            "global": true
        },
        "402-volume-down": {
            "description": "__MSG_volume_down__",
            "global": true
        },
        "403-volume-mute": {
            "description": "__MSG_volume_mute__",
            "global": true
        }
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://open.spotify.com/"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "resources": [
                "web_accessible/checkPageInteraction.js",
                "web_accessible/logo.svg"
            ]
        }
    ]
}
